{
  "Job":{
    "Region":"us-west-2",
    "ID":"{{ environment }}-{{ product }}",
    "Name":"{{ environment }}-{{ product }}",
    "Type":"service",
    "Priority":50,
    "AllAtOnce": false,
    "Datacenters":[
      "us-west-2a"
    ],
    "Constraints": [{
        "LTarget": "${node.class}",
        "RTarget": "{{ environment }}_app_gpu",
        "Operand": "="
    }],
    "TaskGroups":[
      {
        "Name":"{{ environment }}-{{ product }}",
        "Count": 8,
        "Constraints":null,
        "Tasks":[
          {
            "Name":"{{ environment }}-{{ product }}",
            "Driver":"docker",
            "User":"root",
            "Config":{
              "image":"{{ image }}-gpu",
              "devices": [
                {
                  "host_path" : "/dev/nvidiactl",
                  "container_path" : "/dev/nvidiactl",
                  "cgroup_permissions": "rwm"
                },
                {
                  "host_path" : "/dev/nvidia-uvm",
                  "container_path" : "/dev/nvidia-uvm",
                  "cgroup_permissions": "rwm"
                },
                {
                  "host_path" : "/dev/nvidia-uvm-tools",
                  "container_path" : "/dev/nvidia-uvm-tools",
                  "cgroup_permissions": "rwm"
                },
                {
                  "host_path" : "/dev/nvidia0",
                  "container_path" : "/dev/nvidia0",
                  "cgroup_permissions": "rwm"
                }
              ],
              "volumes": [
                "nvidia_driver_384.111:/usr/local/nvidia"
              ],
              "volume_driver": "nvidia-docker",
              "port_map": [
                {
                  "web":8080
                }
              ]
            },
            "Constraints":null,
            "Templates": [
              {
                "SourcePath": "",
                "DestPath": "secrets/vars.env",
                "EmbeddedTmpl": "((range ls \"{{environment}}/env/{{product}}\"))((.Key))=((.Value))\n((end))",
                "ChangeMode": "noop",
                "ChangeSignal": "",
                "Splay": 5000000000,
                "Perms": "0644",
                "LeftDelim": "((",
                "RightDelim": "))",
                "Envvars": true
              }
            ],
            "Env":{
                "CONTAINER_NAME": "${NOMAD_TASK_NAME}.${NOMAD_ALLOC_ID}.${NOMAD_ALLOC_INDEX}"
            },
            "Services":[
              {
                "Name":"{{ environment }}-{{ product }}",
                "Tags":[
                  "internal",
                  "{{ environment }}"
                ],
                "PortLabel":"web",
                "Checks":[
                  {
                    "Id":"",
                    "Name":"{{ product }}-status",
                    "Type":"http",
                    "Command":"",
                    "Args":null,
                    "Path":"/",
                    "Protocol":"",
                    "Interval":10000000000,
                    "Timeout":2000000000
                  }
                ]
              }
            ],
            "Resources":{
              "CPU":2000,
              "MemoryMB":12288,
              "IOPS":0,
              "Networks":[
                {
                  "MBits":10,
                  "DynamicPorts":[
                    {
                      "Label":"web"
                    }
                  ]
                }
              ]
            },
            "Meta":{
              "baz":"baz"
            },
            "KillTimeout":5000000000,
            "LogConfig":{
                "MaxFiles":10,
                "MaxFileSizeMB":10
            }
          },
          {
            "Name":"{{ environment }}-{{ product }}-rsyslog",
            "Driver":"docker",
            "Config":{
              "image":"blinker/rsyslog:latest",
              "hostname": "${attr.unique.hostname}"
            },
            "Constraints":null,
            "Services":[
              {
                "Name":"rsyslog",
                "Tags":[
                  "{{ product }}",
                  "{{ environment }}"
                ]
              }
            ],
            "Resources":{
              "CPU":100,
              "MemoryMB":16,
              "IOPS":0
            },
            "KillTimeout":5000000000,
            "LogConfig":{
              "MaxFiles":10,
              "MaxFileSizeMB":10
            }
          }
        ],
        "RestartPolicy":{
          "Interval":90000000000,
          "Attempts":4,
          "Delay":15000000000,
          "Mode":"delay"
        }
      }
    ],
    "Update": {
      "MaxParallel": 4,
      "Stagger": {{ stagger }}
    }
  }
}
