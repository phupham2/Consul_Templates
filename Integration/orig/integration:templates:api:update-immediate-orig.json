{
  "Job":{
    "Region":"us-west-2",
    "ID":"{{ environment }}-{{ product }}-background",
    "Name":"{{ environment }}-{{ product }}-background",
    "Type":"service",
    "Priority":50,
    "AllAtOnce":false,
    "Datacenters":[
      "us-west-2a"
    ],
    "TaskGroups":[
      {
        "Name":"{{ environment }}-sidekiq",
        "Count":1,
        "Constraints": [{
            "LTarget": "${node.class}",
            "RTarget": "{{ environment }}_app",
            "Operand": "="
        }],
        "Tasks":[
          {
            "Name":"{{ environment }}-sidekiq",
            "Driver":"docker",
            "User":"root",
            "Config":{
              "image":"{{ image }}",
              "port_map":[ ],
              "command": "bundle",
              "args": [ "exec", "sidekiq", "-v", "-C", "./config/sidekiq.yml" ],
              "logging": [
                {
                  "config": [
                    {
                      "syslog-address": "tcp://syslog.service.consul:514",
                      "tag": "${NOMAD_ALLOC_NAME}/{{ environment }}/sidekiq/{{ '{{' }} .ImageName {{ '}}' }}/{{ '{{' }} .Name {{ '}}' }}/{{ '{{' }} .ID {{ '}}' }}",
                      "syslog-facility": "daemon",
                      "syslog-format": "rfc3164"
                    }
                  ],
                  "type": "syslog"
                }
              ],
              "auth":[{
                  "username":"{{ credentials.username }}",
                  "password":"{{ credentials.password }}",
                  "email":"{{ credentials.email }}"
                }]
            },
            "Constraints":null,
            "Env":{
                {% for key, value in runtime.iteritems() %}
                "{{ key }}": "{{ value }}"{{ ',' if loop.index < runtime|length else '' }}
                {% endfor %}
            },
            "Services":[
              {
                "Name":"{{ environment }}-sidekiq",
                "Tags":[
                  "{{ product }}",
                  "{{ environment }}",
                  "sidekiq"
                ],
                "Checks":[ ]
              }
            ],
            "Resources":{
              "CPU":300,
              "MemoryMB":512,
              "IOPS":0,
              "Networks":[ { "MBits":10 } ]
            },
            "KillTimeout":5000000000,
            "LogConfig":{
                "MaxFiles":10,
                "MaxFileSizeMB":10
            }
          }
        ],
        "RestartPolicy":{
          "Interval":90000000000,
          "Attempts":1,
          "Delay":15000000000,
          "Mode":"fail"
        }
      },
      {
        "Name":"{{ environment }}-clockwork",
        "Count":1,
        "Constraints": [{
            "LTarget": "${node.class}",
            "RTarget": "{{ environment }}_app",
            "Operand": "="
        }],
        "Tasks":[
          {
            "Name":"{{ environment }}-clockwork",
            "Driver":"docker",
            "User":"root",
            "Config":{
              "image":"{{ image }}",
              "port_map":[ ],
              "command":"bundle",
              "args":["exec", "clockwork", "./config/schedule.rb"],
              "logging": [
                {
                  "config": [
                    {
                      "syslog-address": "tcp://syslog.service.consul:514",
                      "tag": "${NOMAD_ALLOC_NAME}/{{ environment }}/clockwork/{{ '{{' }} .ImageName {{ '}}' }}/{{ '{{' }} .Name {{ '}}' }}/{{ '{{' }} .ID {{ '}}' }}",
                      "syslog-facility": "daemon",
                      "syslog-format": "rfc3164"
                    }
                  ],
                  "type": "syslog"
                }
              ],
              "auth":[{
                  "username":"{{ credentials.username }}",
                  "password":"{{ credentials.password }}",
                  "email":"{{ credentials.email }}"
                }]
            },
            "Constraints":null,
            "Env":{
                {% for key, value in runtime.iteritems() %}
                "{{ key }}": "{{ value }}"{{ ',' if loop.index < runtime|length else '' }}
                {% endfor %}
            },
            "Services":[
              {
                "Name":"{{ environment }}-clockwork",
                "Tags":[
                  "{{ product }}",
                  "{{ environment }}",
                  "clockwork"
                ],
                "Checks":[ ]
              }
            ],
            "Resources":{
              "CPU":500,
              "MemoryMB":1024,
              "IOPS":0,
              "Networks":[ { "MBits":10 } ]
            },
            "Meta":{},
            "KillTimeout":5000000000,
            "LogConfig":{
                "MaxFiles":10,
                "MaxFileSizeMB":10
            }
          }
        ]
      }
    ]
  }
}
