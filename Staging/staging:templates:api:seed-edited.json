{
  "Job":{
    "Region":"us-west-2",
    "ID":"{{ environment }}-{{ product }}-batch",
    "Name":"{{ environment }}-{{ product }}-batch",
    "Type":"batch",
    "Priority":50,
    "AllAtOnce":false,
    "Datacenters":[
      "us-west-2a"
    ],
    "Constraints": [{
        "LTarget": "${node.class}",
        "RTarget": "{{ environment }}_app",
        "Operand": "="
    }],
    "TaskGroups":[
      {
        "Name":"{{ environment }}-{{ product }}-batch",
        "Count":1,
        "Constraints":null,
        "Tasks":[
          {
            "Name":"{{ environment }}-{{ product }}-batch",
            "Driver":"docker",
            "User":"root",
            "Config":{
              "image":"{{ image }}",
              "command": "bundle",
              "args":[
                  "exec", "rake", "db:seed:{{ environment }}"
              ]
            },
            "Constraints":null,
            "Env":{
                {% for key, value in runtime.iteritems() %}
                    {% if key == 'DATABASE_USERNAME' %}
                "DATABASE_USERNAME": "{{ runtime['DATABASE_SUPER_USERNAME'] }}",
                "DATABASE_NORMAL_USERNAME": "{{ value }}"{{ ',' if loop.index < runtime|length else '' }}
                    {% elif key == 'DATABASE_PASSWORD' %}
                "DATABASE_PASSWORD": "{{ runtime['DATABASE_SUPER_PASSWORD'] }}",
                "DATABASE_NORMAL_PASSWORD": "{{ value }}"{{ ',' if loop.index < runtime|length else '' }}
                    {% else %}
                "{{ key }}": "{{ value }}"{{ ',' if loop.index < runtime|length else '' }}
                    {% endif %}
                {% endfor %}
            },
            "Services":[
              {
                "Name":"{{ environment }}-{{ product }}-batch",
                "Tags":[
                  "{{ product }}",
                  "{{ environment }}",
                  "batch"
                ]
              }
            ],
            "Resources":{
              "CPU":500,
              "MemoryMB":256,
              "IOPS":0,
              "Networks":[ { "MBits":10 } ]
            },
            "KillTimeout":5000000000,
            "LogConfig":{
                "MaxFiles":10,
                "MaxFileSizeMB":10
            }
          },
          {
            "Name":"{{ environment }}-{{ product }}-rsyslog",
            "Driver":"docker",
            "Config":{
              "image":"blinker/rsyslog:latest",
              "hostname": "${attr.unique.hostname}"
            },
            "Constraints":null,
            "Services":[
              {
                "Name":"rsyslog",
                "Tags":[
                  "{{ product }}",
                  "{{ environment }}"
                ]
              }
            ],
            "Resources":{
              "CPU":100,
              "MemoryMB":16,
              "IOPS":0
            },
            "KillTimeout":5000000000,
            "LogConfig":{
              "MaxFiles":10,
              "MaxFileSizeMB":10
            }
          }
        ],
        "RestartPolicy":{
          "Interval":90000000000,
          "Attempts":5,
          "Delay":15000000000,
          "Mode":"delay"
        }
      }
    ]
  }
}
